a='coming'
length=int(len(a))
print(length)
i=length
if(length>3):
    for i in a :

      if((a(i-3)),(a(i)))!='ing':
           b=a+'ing'
      else:
           b=a+'ly'
      break
else:
    b=a
print(b)

TAsk 2

list1 = ['physics', 'chemistry', 1997, 2000];
def printme( list1 ):
   ls=0
   l=len(list1)
   i=0
   for i in range(l):
       l1=len(list1[i])
       if(l1>ls):
        ls=l1
   print(ls)
   return ls
printme(list1)


